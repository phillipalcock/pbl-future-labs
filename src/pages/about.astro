---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const breadcrumbItems = [
    { label: 'About' }
];
---

<Layout title="About Us - PBL Future Labs">
    <div class="max-w-4xl">
        <Breadcrumb items={breadcrumbItems} />

        <!-- Hero Section -->
        <section class="py-12 mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-6">About PBL Future Labs</h1>
            <p class="text-xl text-gray-600 mb-6">We're passionate about transforming education through project-based learning enhanced by artificial intelligence and community engagement.</p>
        </section>

        <!-- Mission Section -->
        <section class="mb-16 bg-blue-50 border border-blue-100 rounded-2xl p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Our Mission</h2>
            <p class="text-lg text-gray-700">To empower educators and students with the knowledge, tools, and resources needed to create meaningful, real-world learning experiences that drive authentic impact in their communities.</p>
        </section>

        <!-- Who We Are -->
        <section class="mb-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Who We Are</h2>
            <div class="space-y-6">
                <p class="text-gray-700 leading-relaxed">
                    PBL Future Labs was founded by a team of experienced educators, curriculum designers, and technology specialists dedicated to modernizing education. We've spent over a decade researching, implementing, and refining project-based learning approaches in diverse educational settings.
                </p>
                <p class="text-gray-700 leading-relaxed">
                    Our team combines expertise in:
                </p>
                <ul class="space-y-3 ml-6">
                    <li class="flex gap-3">
                        <span class="text-blue-600 font-bold">‚úì</span>
                        <span class="text-gray-700"><strong class="text-gray-900">Education & Pedagogy:</strong> Deep understanding of learning science and instructional design</span>
                    </li>
                    <li class="flex gap-3">
                        <span class="text-blue-600 font-bold">‚úì</span>
                        <span class="text-gray-700"><strong class="text-gray-900">Artificial Intelligence:</strong> Cutting-edge AI implementation for personalized learning</span>
                    </li>
                    <li class="flex gap-3">
                        <span class="text-blue-600 font-bold">‚úì</span>
                        <span class="text-gray-700"><strong class="text-gray-900">Community Engagement:</strong> Proven strategies for authentic, real-world learning connections</span>
                    </li>
                    <li class="flex gap-3">
                        <span class="text-blue-600 font-bold">‚úì</span>
                        <span class="text-gray-700"><strong class="text-gray-900">Technology & Innovation:</strong> State-of-the-art platforms and tools for modern learning</span>
                    </li>
                </ul>
            </div>
        </section>

        <!-- What We Offer -->
        <section class="mb-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">What We Offer</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white rounded-2xl p-6 shadow-sm active:scale-95 transition-transform">
                    <h3 class="text-xl font-bold text-gray-900 mb-3">üìö Educational Books</h3>
                    <p class="text-gray-600">Expert-authored guides on project-based learning, AI in education, assessment strategies, and more.</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-sm active:scale-95 transition-transform">
                    <h3 class="text-xl font-bold text-gray-900 mb-3">üéì Micro-Credentials</h3>
                    <p class="text-gray-600">Industry-recognized professional development courses ranging from 4-7 weeks with hands-on projects.</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-sm active:scale-95 transition-transform">
                    <h3 class="text-xl font-bold text-gray-900 mb-3">üíº Resource Bundles</h3>
                    <p class="text-gray-600">Comprehensive packages combining books and courses at special pricing for maximum learning value.</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-sm active:scale-95 transition-transform">
                    <h3 class="text-xl font-bold text-gray-900 mb-3">üåç Community Support</h3>
                    <p class="text-gray-600">Access to learning communities, discussion forums, and ongoing support from education experts.</p>
                </div>
            </div>
        </section>

        <!-- Our Values -->
        <section class="mb-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Our Core Values</h2>
            <div class="space-y-4">
                <div class="border-l-4 border-blue-600 pl-6 py-2">
                    <h3 class="font-bold text-gray-900 mb-2">Authenticity</h3>
                    <p class="text-gray-600">We believe learning should be connected to real-world challenges and meaningful outcomes.</p>
                </div>
                <div class="border-l-4 border-green-600 pl-6 py-2">
                    <h3 class="font-bold text-gray-900 mb-2">Inclusivity</h3>
                    <p class="text-gray-600">Education should be accessible to all learners, regardless of background or circumstance.</p>
                </div>
                <div class="border-l-4 border-purple-600 pl-6 py-2">
                    <h3 class="font-bold text-gray-900 mb-2">Innovation</h3>
                    <p class="text-gray-600">We continually explore new technologies and pedagogies to improve learning experiences.</p>
                </div>
                <div class="border-l-4 border-orange-600 pl-6 py-2">
                    <h3 class="font-bold text-gray-900 mb-2">Quality</h3>
                    <p class="text-gray-600">Every resource we create is carefully designed, vetted, and continuously improved.</p>
                </div>
            </div>
        </section>

        <!-- Impact -->
        <section class="mb-16 bg-blue-50 rounded-2xl p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Our Impact</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                <div>
                    <div class="text-4xl font-bold text-blue-600 mb-2">10,000+</div>
                    <p class="text-gray-700">Educators Using Our Resources</p>
                </div>
                <div>
                    <div class="text-4xl font-bold text-blue-600 mb-2">500+</div>
                    <p class="text-gray-700">Learning Resources Published</p>
                </div>
                <div>
                    <div class="text-4xl font-bold text-blue-600 mb-2">100,000+</div>
                    <p class="text-gray-700">Students Impacted Globally</p>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-12 bg-blue-600 text-white rounded-2xl text-center mb-8">
            <h2 class="text-3xl font-bold mb-4">Join Us in Transforming Education</h2>
            <p class="text-lg mb-6 opacity-90">Start your journey with expert resources and professional development today</p>
            <div class="flex gap-4 justify-center flex-wrap">
                <a href="/shop" class="btn btn-lg bg-white text-blue-600 hover:bg-gray-100 rounded-xl px-8 no-underline min-h-[48px] active:scale-95 transition-transform">Explore Books</a>
                <a href="/courses" class="btn btn-lg btn-ghost text-white hover:bg-white/20 rounded-xl px-8 no-underline min-h-[48px] active:scale-95 transition-transform">View Courses</a>
            </div>
        </section>

        <!-- Contact -->
        <section class="bg-white rounded-2xl p-8 shadow-sm">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Get In Touch</h2>
            <div class="space-y-4">
                <p class="text-gray-700">Have questions or feedback? We'd love to hear from you!</p>
                <div class="flex gap-2 items-center">
                    <span class="font-semibold text-gray-900">Email:</span>
                    <a href="mailto:hello@pblfuturelabs.com" class="text-blue-600 hover:text-blue-800 no-underline">hello@pblfuturelabs.com</a>
                </div>
                <div class="flex gap-2 items-center">
                    <span class="font-semibold text-gray-900">Follow Us:</span>
                    <div class="flex gap-3">
                        <a href="https://twitter.com/thommarkham" class="text-blue-600 hover:text-blue-800 no-underline">Twitter</a>
                        <a href="https://linkedin.com/in/thommarkham" class="text-blue-600 hover:text-blue-800 no-underline">LinkedIn</a>
                        <a href="https://youtube.com/@pblglobal" class="text-blue-600 hover:text-blue-800 no-underline">YouTube</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>
