---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const breadcrumbItems = [
    { label: 'Coaching' }
];

const services = [
    {
        title: "School-Wide PBL Implementation",
        description: "Transform your entire school culture with a comprehensive rollout strategy tailored to your community.",
        icon: "üè´"
    },
    {
        title: "Teacher Workshops",
        description: "Hands-on training sessions that equip educators with practical PBL skills they can use immediately.",
        icon: "üë©‚Äçüè´"
    },
    {
        title: "Curriculum Design",
        description: "Custom project designs aligned to your standards, student interests, and local community needs.",
        icon: "üìê"
    },
    {
        title: "Leadership Coaching",
        description: "Support for principals and administrators driving instructional change from the top.",
        icon: "üéØ"
    }
];
---

<Layout title="On-Demand Coaching - PBL Future Labs">
    <div class="max-w-4xl">
        <Breadcrumb items={breadcrumbItems} />

        <!-- Hero Section -->
        <section class="py-16 mb-16 border-b border-gray-200">
            <h1 class="text-5xl sm:text-6xl font-bold text-gray-900 mb-6 leading-tight">
                Direct support for your school.
            </h1>
            <p class="text-xl text-gray-600 mb-8 max-w-3xl leading-relaxed">
                Phil and Thom work directly with schools implementing AI + PBL. Flexible engagements‚Äîfrom single workshops to multi-year partnerships.
            </p>
            <a href="mailto:hello@pblfuturelabs.com?subject=Coaching Inquiry" class="btn btn-primary text-white rounded-lg px-6 py-3 no-underline font-medium min-h-[48px] active:scale-95">
                Get in touch
            </a>
        </section>

        <!-- The Approach -->
        <section class="py-16 border-b border-gray-200">
            <h2 class="text-4xl font-bold text-gray-900 mb-6">How it works</h2>
            <p class="text-lg text-gray-600 mb-8 max-w-3xl leading-relaxed">
                We start by listening. Understanding your challenges, strengths, and what success looks like. Then we design a coaching plan for your timeline, budget, and goals.
            </p>
            <div class="flex flex-wrap gap-3">
                <span class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 font-medium">Flexible schedule</span>
                <span class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 font-medium">Virtual or in-person</span>
                <span class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 font-medium">Ongoing support</span>
            </div>
        </section>

        <!-- Services Grid -->
        <section class="py-16 border-b border-gray-200">
            <h2 class="text-4xl font-bold text-gray-900 mb-12">Services</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                {services.map(service => (
                    <div>
                        <h3 class="text-lg font-bold text-gray-900 mb-3">{service.title}</h3>
                        <p class="text-gray-600 leading-relaxed">{service.description}</p>
                    </div>
                ))}
            </div>
        </section>

        <!-- How It Works -->
        <section class="py-16 border-b border-gray-200">
            <h2 class="text-4xl font-bold text-gray-900 mb-12">Process</h2>
            <div class="space-y-10">
                <div class="flex gap-6">
                    <div class="flex-shrink-0 text-2xl font-bold text-blue-600">1</div>
                    <div>
                        <h3 class="font-bold text-gray-900 mb-2">Discovery call</h3>
                        <p class="text-gray-600">Free 30-minute conversation to understand your needs.</p>
                    </div>
                </div>
                <div class="flex gap-6">
                    <div class="flex-shrink-0 text-2xl font-bold text-blue-600">2</div>
                    <div>
                        <h3 class="font-bold text-gray-900 mb-2">Custom proposal</h3>
                        <p class="text-gray-600">We design a coaching plan with clear outcomes and transparent pricing.</p>
                    </div>
                </div>
                <div class="flex gap-6">
                    <div class="flex-shrink-0 text-2xl font-bold text-blue-600">3</div>
                    <div>
                        <h3 class="font-bold text-gray-900 mb-2">Implementation</h3>
                        <p class="text-gray-600">Hands-on coaching and support to bring your vision to life.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonial -->
        <section class="py-16 border-b border-gray-200">
            <blockquote class="text-xl sm:text-2xl font-medium mb-6 leading-relaxed text-gray-900">
                "Thom trained our teachers and helped us build a PBL program that works. Three years later, we're still growing it."
            </blockquote>
            <div>
                <p class="font-semibold text-gray-900">Dr. Rachel Kim</p>
                <p class="text-gray-600">Superintendent, Riverside Unified School District</p>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Ready?</h2>
            <p class="text-lg text-gray-600 mb-8 max-w-2xl">
                Get in touch with any questions. First conversation is free.
            </p>
            <div class="flex gap-3 flex-wrap">
                <a href="mailto:hello@pblfuturelabs.com?subject=Coaching Inquiry" class="btn btn-primary text-white rounded-lg px-6 py-3 no-underline font-medium min-h-[48px] active:scale-95">
                    Email
                </a>
                <a href="/about" class="btn btn-outline rounded-lg px-6 py-3 no-underline border border-gray-300 font-medium min-h-[48px] active:scale-95 hover:border-gray-400">
                    Learn more
                </a>
            </div>
        </section>
    </div>
</Layout>
