---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { products } from '../data/products';

const books = products.filter(p => p.category === 'book');
const bundles = products.filter(p => p.category === 'bundle');

const breadcrumbItems = [
    { label: 'Shop' }
];
---

<Layout title="Shop - Books & Products">
    <div class="max-w-6xl">
        <Breadcrumb items={breadcrumbItems} />

        <!-- Page Header -->
        <div class="mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Books & bundles</h1>
            <p class="text-lg text-gray-600">Thom Markham's books on project-based learning, available individually or bundled with courses.</p>
        </div>

        <!-- Filter Section -->
        <div class="mb-8 flex gap-3 flex-wrap">
            <button class="btn btn-sm btn-primary text-white rounded-xl min-h-[44px] px-6 active:scale-95 transition-transform">All Products</button>
            <button class="btn btn-sm btn-outline rounded-xl hover:bg-emerald-50 min-h-[44px] px-6 active:scale-95 transition-transform" onclick="window.scrollTo(0, 0)">Books ({books.length})</button>
            <button class="btn btn-sm btn-outline rounded-xl hover:bg-emerald-50 min-h-[44px] px-6 active:scale-95 transition-transform" onclick="window.scrollTo(0, 0)">Bundles ({bundles.length})</button>
        </div>

        <!-- Books Grid -->
        <section class="mb-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Books</h2>
            <p class="text-gray-600 mb-8">Thom's three books on modern project-based learning. These are the pedagogical foundation for everything we teach. Available individually or bundled with our courses.</p>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {books.map(book => (
                    <div class="card card-hover bg-white rounded-2xl overflow-hidden shadow-sm active:scale-[0.98] transition-transform">
                        <div class="aspect-[4/3] bg-white overflow-hidden img-skeleton">
                            <img
                                src={book.image}
                                alt={book.title}
                                width="400"
                                height="300"
                                srcset={`${book.image.replace(/(\.\w+)$/, '-400$1')} 400w, ${book.image.replace(/(\.\w+)$/, '-600$1')} 600w, ${book.image.replace(/(\.\w+)$/, '-800$1')} 800w`}
                                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                loading="lazy"
                                decoding="async"
                                onload="this.parentElement.classList.add('loaded')"
                            />
                        </div>
                        <div class="p-6">
                            <div class="inline-block px-2 py-1 bg-amber-100 text-amber-700 text-xs font-semibold rounded-full mb-2">Book</div>
                            <h3 class="font-bold text-lg text-gray-900 mb-3 line-clamp-2">{book.title}</h3>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">{book.description}</p>

                            <!-- Rating -->
                            <div class="flex items-center gap-2 mb-4">
                                <div class="flex items-center">
                                    <span class="text-yellow-500">&#9733;</span>
                                    <span class="text-sm font-semibold text-gray-700 ml-1">{book.rating}</span>
                                </div>
                            </div>

                            <!-- Price -->
                            <div class="flex items-center justify-between">
                                <span class="text-2xl font-bold text-gray-900">${book.price}</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- Bundles Section -->
        {bundles.length > 0 && (
            <section class="mb-16">
                <h2 class="text-2xl font-bold text-gray-900 mb-8">Bundles</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {bundles.map(bundle => (
                        <div class="card card-hover bg-gradient-to-br from-amber-50 to-emerald-50 border-2 border-amber-200 rounded-2xl overflow-hidden shadow-md active:scale-[0.98] transition-transform">
                            <div class="p-6">
                                <div class="text-6xl mb-4">{bundle.image}</div>
                                <div class="inline-block px-3 py-1 bg-amber-500 text-white text-xs font-bold rounded-full mb-3">Best Value</div>
                                <h3 class="font-bold text-xl text-gray-900 mb-3">{bundle.title}</h3>
                                <p class="text-gray-600 mb-4">{bundle.description}</p>

                                <!-- Rating -->
                                <div class="flex items-center gap-2 mb-4">
                                    <div class="flex items-center">
                                        <span class="text-yellow-500">&#9733;</span>
                                        <span class="text-sm font-semibold text-gray-700 ml-1">{bundle.rating}</span>
                                    </div>
                                </div>

                                <!-- Price -->
                                <div class="pt-4 border-t border-amber-200">
                                    <span class="text-xs text-gray-600">Bundle Price</span>
                                    <span class="text-3xl font-bold text-gray-900 block">${bundle.price}</span>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </section>
        )}

        <!-- CTA Section -->
        <section class="py-12 bg-gradient-to-r from-emerald-600 to-teal-700 rounded-2xl text-center mb-8 text-white shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Want hands-on training?</h2>
            <p class="opacity-90 mb-6">Our courses go deeperâ€”4-7 weeks of AI + PBL skills with real student projects.</p>
            <a href="/courses" class="btn btn-lg bg-white text-emerald-700 hover:bg-gray-100 rounded-xl no-underline font-semibold min-h-[48px] active:scale-95 transition-transform">Browse Courses</a>
        </section>
    </div>
</Layout>
