        function loadCart() {
            const cartItems = JSON.parse(localStorage.getItem('cart') || '[]');
            return cartItems;
        }

        function calculateTotals(items) {
            // We'll calculate based on stored items
            let subtotal = 0;
            // In a real app, we'd fetch product data from server
            items.forEach(item => {
                // This is a simplified version - in production, fetch actual product data
                subtotal += item.price * item.quantity || 0;
            });
            return subtotal;
        }

        function renderCart() {
            const cartItems = loadCart();
            const container = document.getElementById('cart-items-container');
            const emptyCart = document.getElementById('empty-cart');

            if (cartItems.length === 0) {
                container.innerHTML = '';
                emptyCart.style.display = 'block';
                document.getElementById('subtotal').textContent = '$0.00';
                document.getElementById('total').textContent = '$0.00';
                return;
            }

            emptyCart.style.display = 'none';
            container.innerHTML = cartItems.map((item, index) => `
                <div class="bg-white border border-gray-200 rounded-lg p-6 flex gap-6">
                    <div class="w-24 h-24 bg-gray-200 rounded flex-shrink-0">
                        <!-- Product image would go here -->
                    </div>
                    <div class="flex-grow">
                        <h3 class="font-bold text-gray-900 mb-2">Product ID: ${item.productId}</h3>
                        <p class="text-gray-600 mb-4">
                            <span id="price-${index}" class="font-semibold">Loading...</span>
                        </p>
                        <div class="flex items-center gap-4">
                            <label class="flex items-center gap-2">
                                <span class="text-sm text-gray-600">Qty:</span>
                                <input
                                    type="number"
                                    min="1"
                                    value="${item.quantity}"
                                    class="input input-bordered input-sm w-16 rounded"
                                    onchange="updateQuantity(${index}, this.value)"
                                />
                            </label>
                            <button
                                class="btn btn-ghost btn-sm text-red-600"
                                onclick="removeItem(${index})"
                            >
                                Remove
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');

            updateSummary();
        }

        function updateQuantity(index, quantity) {
            const cartItems = loadCart();
            cartItems[index].quantity = parseInt(quantity) || 1;
            localStorage.setItem('cart', JSON.stringify(cartItems));
            renderCart();
        }

        function removeItem(index) {
            const cartItems = loadCart();
            cartItems.splice(index, 1);
            localStorage.setItem('cart', JSON.stringify(cartItems));
            renderCart();
        }

        function updateSummary() {
            const cartItems = loadCart();
            let subtotal = 0;

            // Note: In a real application, we'd have product prices
            // For now, this is a placeholder
            cartItems.forEach(item => {
                // This would fetch from server in a real app
                subtotal += (item.price || 0) * item.quantity;
            });

            const subtotalEl = document.getElementById('subtotal');
            const totalEl = document.getElementById('total');

            subtotalEl.textContent = '$' + subtotal.toFixed(2);
            totalEl.textContent = '$' + subtotal.toFixed(2);
        }

        // Checkout button
        document.getElementById('checkout-btn').addEventListener('click', () => {
            const cartItems = loadCart();
            if (cartItems.length === 0) {
                alert('Your cart is empty. Please add items before checking out.');
                return;
            }
            alert('Checkout functionality would be implemented here with a payment gateway like Stripe or PayPal.');
            // In a real app, redirect to checkout page or payment processor
        });

        // Initial render
        renderCart();
    </script>
