---
import Layout from '../layouts/Layout.astro';
import { products } from '../data/products';

const featuredBooks = products.filter(p => p.category === 'book').slice(0, 3);
const featuredCourses = products.filter(p => p.category === 'course').slice(0, 3);
---

<Layout title="PBL Future Labs - Books, Courses & Educational Resources">
    <!-- Hero Section -->
    <section class="py-8 text-center max-w-5xl">
        <h1 class="text-5xl font-extrabold text-gray-900 mb-6 leading-tight">Transform Education with Project-Based Learning</h1>
        <p class="text-xl text-gray-700 mb-4 leading-relaxed">Discover expert-curated books, micro-credentials, and resources to enhance teaching and learning</p>
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">Join educators and professionals building the future of education</p>
        <div class="flex gap-4 justify-center flex-wrap">
            <a href="/shop" class="btn btn-primary btn-lg text-white rounded-lg px-8 no-underline">Shop Books & Products</a>
            <a href="/courses" class="btn btn-outline btn-lg rounded-lg px-8 no-underline">Browse Courses</a>
        </div>
    </section>

    <!-- Featured Books -->
    <section class="mb-16 max-w-5xl">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Featured Books</h2>
            <a href="/shop?category=book" class="text-blue-600 hover:text-blue-800 font-semibold no-underline">View All Books →</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {featuredBooks.map(book => (
                <div class="card bg-white border border-gray-200 hover:border-gray-300 transition-all duration-200 shadow-sm hover:shadow-lg hover:-translate-y-1">
                    <div class="aspect-video bg-gray-200 rounded-t-lg overflow-hidden">
                        <img src={book.image} alt={book.title} class="w-full h-full object-cover" />
                    </div>
                    <div class="p-5">
                        <div class="inline-block px-2 py-1 bg-amber-100 text-amber-700 text-xs font-semibold rounded mb-2">Book</div>
                        <h3 class="font-bold text-lg text-gray-900 mb-2 line-clamp-2">{book.title}</h3>
                        <p class="text-gray-700 text-sm mb-4 line-clamp-2">{book.description}</p>
                        <div class="flex items-center justify-between mb-4">
                            <span class="text-2xl font-bold text-gray-900">${book.price}</span>
                            <div class="flex items-center gap-1">
                                <span class="text-yellow-500">★</span>
                                <span class="text-sm font-semibold text-gray-700">{book.rating}</span>
                                <span class="text-xs text-gray-500">({book.reviews})</span>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <!-- Featured Courses -->
    <section class="mb-16 max-w-5xl">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Featured Micro-Credentials</h2>
            <a href="/courses" class="text-blue-600 hover:text-blue-800 font-semibold no-underline">View All Courses →</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {featuredCourses.map(course => (
                <div class="card bg-white border border-gray-200 hover:border-gray-300 transition-all duration-200 shadow-sm hover:shadow-lg hover:-translate-y-1">
                    <div class="aspect-video bg-gradient-to-br from-blue-100 to-blue-200 rounded-t-lg overflow-hidden flex items-center justify-center">
                        <span class="text-6xl">{course.image}</span>
                    </div>
                    <div class="p-5">
                        <div class="inline-block px-2 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded mb-2">Micro-Credential</div>
                        <h3 class="font-bold text-lg text-gray-900 mb-2 line-clamp-2">{course.title}</h3>
                        <p class="text-gray-700 text-sm mb-4 line-clamp-2">{course.description}</p>
                        <div class="flex items-center justify-between mb-4">
                            <span class="text-2xl font-bold text-gray-900">${course.price}</span>
                            <div class="flex items-center gap-1">
                                <span class="text-yellow-500">★</span>
                                <span class="text-sm font-semibold text-gray-700">{course.rating}</span>
                                <span class="text-xs text-gray-500">({course.reviews})</span>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <!-- About the Author -->
    <section class="mb-16 max-w-5xl">
        <div class="bg-gray-50 rounded-xl p-8 md:p-12">
            <div class="flex flex-col md:flex-row gap-8 items-center">
                <div class="w-32 h-32 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-4xl font-bold text-white">TM</span>
                </div>
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">Dr. Thom Markham</h2>
                    <p class="text-blue-600 font-semibold mb-4">Author, Psychologist & PBL Expert</p>
                    <p class="text-gray-700 leading-relaxed">Dr. Thom Markham is a psychologist, author, and internationally recognized expert in project-based learning. With over 15 years of experience transforming classrooms worldwide, his books and courses have helped thousands of educators implement meaningful, student-centered learning experiences.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="mb-16 max-w-5xl">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">What Educators Are Saying</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                <div class="text-yellow-500 mb-4">★★★★★</div>
                <p class="text-gray-700 mb-4 leading-relaxed">"The PBL Handbook completely transformed how I approach teaching. My students are more engaged than ever before."</p>
                <div class="text-sm">
                    <p class="font-semibold text-gray-900">Sarah M.</p>
                    <p class="text-gray-500">High School Science Teacher</p>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                <div class="text-yellow-500 mb-4">★★★★★</div>
                <p class="text-gray-700 mb-4 leading-relaxed">"The micro-credential courses are practical and immediately applicable. Worth every penny for professional development."</p>
                <div class="text-sm">
                    <p class="font-semibold text-gray-900">James K.</p>
                    <p class="text-gray-500">Curriculum Director</p>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                <div class="text-yellow-500 mb-4">★★★★★</div>
                <p class="text-gray-700 mb-4 leading-relaxed">"Redefining Smart gave me a new perspective on student potential. Essential reading for any modern educator."</p>
                <div class="text-sm">
                    <p class="font-semibold text-gray-900">Maria L.</p>
                    <p class="text-gray-500">Middle School Principal</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-gradient-to-r from-blue-600 to-blue-800 rounded-xl mb-16 max-w-5xl text-center text-white">
        <h2 class="text-3xl font-bold mb-4">Ready to Transform Your Learning Journey?</h2>
        <p class="text-lg mb-8 opacity-90">Explore our complete catalog of professional development resources</p>
        <a href="/shop" class="btn btn-ghost text-white hover:bg-white/20 btn-lg rounded-lg px-8 no-underline">Explore All Products</a>
    </section>
</Layout>
