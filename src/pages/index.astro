---
import Layout from '../layouts/Layout.astro';
import { products } from '../data/products';

const featuredBooks = products.filter(p => p.category === 'book').slice(0, 3);
const featuredCourses = products.filter(p => p.category === 'course').slice(0, 3);

const testimonials = [
    {
        quote: "The PBL resources transformed how I approach curriculum design. My students are more engaged than ever, and the learning outcomes have improved dramatically.",
        author: "Sarah Chen",
        role: "High School Science Teacher",
        school: "Lincoln Academy, CA"
    },
    {
        quote: "Thom's workshops gave our entire district a practical framework for implementing project-based learning. The results speak for themselves.",
        author: "Dr. Michael Torres",
        role: "Curriculum Director",
        school: "Denver Public Schools, CO"
    },
    {
        quote: "These micro-credentials helped me advance my career while genuinely improving my teaching practice. Worth every minute invested.",
        author: "Emily Rodriguez",
        role: "Middle School Educator",
        school: "Austin ISD, TX"
    }
];

const partnerLogos = [
    { name: "Stanford d.school", abbrev: "Stanford" },
    { name: "ASCD", abbrev: "ASCD" },
    { name: "Edutopia", abbrev: "Edutopia" },
    { name: "Buck Institute", abbrev: "BIE" },
    { name: "New Tech Network", abbrev: "NTN" }
];
---

<Layout title="PBL Future Labs - Books, Courses & Educational Resources">
    <!-- Hero Section -->
    <section class="py-6 sm:py-8 text-center max-w-5xl">
        <div class="bg-gradient-to-br from-slate-50 via-indigo-50 to-amber-50 -mx-6 sm:-mx-12 px-6 sm:px-12 py-10 sm:py-14 rounded-2xl mb-8">
            <span class="inline-block px-3 py-1 bg-amber-100 text-amber-800 text-sm font-medium rounded-full mb-4">Trusted by 2,500+ Educators Worldwide</span>
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-5 leading-tight">Transform Education with <span class="text-blue-600">Project-Based Learning</span></h1>
            <p class="text-lg sm:text-xl text-gray-700 mb-3 max-w-3xl mx-auto">Discover expert-curated books, micro-credentials, and resources to enhance teaching and learning</p>
            <p class="text-base text-gray-600 mb-8 max-w-2xl mx-auto">Join educators and professionals building the future of education</p>
            <div class="flex gap-4 justify-center flex-wrap mb-6">
                <a href="/shop" class="btn btn-primary btn-lg text-white rounded-lg px-8 no-underline shadow-lg shadow-blue-500/25 hover:shadow-xl hover:shadow-blue-500/30 transition-all">Shop Books & Products</a>
                <a href="/courses" class="btn btn-outline btn-lg rounded-lg px-8 no-underline hover:bg-gray-50">Browse Courses</a>
            </div>
            <div class="guarantee-badge mx-auto">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                30-Day Money-Back Guarantee
            </div>
        </div>
    </section>

    <!-- Trusted By / Partner Logos -->
    <section class="mb-12 max-w-5xl">
        <p class="text-center text-sm text-gray-500 mb-6 uppercase tracking-wider font-medium">Featured in & Trusted By</p>
        <div class="flex flex-wrap justify-center items-center gap-8 sm:gap-12 opacity-70">
            {partnerLogos.map(partner => (
                <div class="text-gray-400 font-semibold text-lg hover:text-gray-600 transition">{partner.name}</div>
            ))}
        </div>
    </section>

    <!-- Trust Signals / Stats Bar -->
    <section class="mb-12 max-w-5xl">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center py-8 bg-white border border-gray-200 rounded-xl shadow-sm">
            <div class="px-4">
                <div class="text-3xl sm:text-4xl font-bold text-blue-600">2,500+</div>
                <div class="text-sm text-gray-600 font-medium">Educators Trained</div>
            </div>
            <div class="px-4 border-l border-gray-200">
                <div class="text-3xl sm:text-4xl font-bold text-blue-600">150+</div>
                <div class="text-sm text-gray-600 font-medium">Schools Partnered</div>
            </div>
            <div class="px-4 border-l border-gray-200">
                <div class="text-3xl sm:text-4xl font-bold text-amber-600">98%</div>
                <div class="text-sm text-gray-600 font-medium">Satisfaction Rate</div>
            </div>
            <div class="px-4 border-l border-gray-200">
                <div class="text-3xl sm:text-4xl font-bold text-blue-600">15+</div>
                <div class="text-sm text-gray-600 font-medium">Years Experience</div>
            </div>
        </div>
    </section>

    <!-- Author Bio Section -->
    <section class="mb-16 max-w-5xl">
        <div class="bg-gradient-to-r from-gray-50 to-blue-50 rounded-2xl p-8 sm:p-10 border border-gray-100">
            <div class="flex flex-col md:flex-row gap-8 items-center">
                <div class="flex-shrink-0">
                    <div class="w-32 h-32 sm:w-40 sm:h-40 rounded-full bg-gradient-to-br from-blue-600 to-purple-600 flex items-center justify-center text-white text-4xl font-bold shadow-xl">
                        TM
                    </div>
                </div>
                <div class="text-center md:text-left">
                    <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Meet Thom Markham, Ph.D.</h2>
                    <p class="text-amber-600 font-semibold mb-4">Author, Speaker & PBL Expert</p>
                    <p class="text-gray-700 mb-4 max-w-2xl">
                        Thom Markham is a globally recognized leader in project-based learning and educational transformation. With over 15 years of experience, he has trained thousands of educators and consulted with schools worldwide to implement engaging, student-centered learning experiences.
                    </p>
                    <div class="flex flex-wrap gap-3 justify-center md:justify-start">
                        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm rounded-full">Stanford d.school Affiliate</span>
                        <span class="px-3 py-1 bg-green-100 text-green-700 text-sm rounded-full">Published Author</span>
                        <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm rounded-full">Keynote Speaker</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Books -->
    <section class="mb-16 max-w-5xl">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Featured Books</h2>
            <a href="/shop?category=book" class="text-blue-600 hover:text-blue-800 font-semibold no-underline">View All Books →</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {featuredBooks.map(book => (
                <div class="card card-hover bg-white border border-gray-200 rounded-xl overflow-hidden shadow-sm">
                    <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
                        <img src={book.image} alt={book.title} class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" />
                    </div>
                    <div class="p-5">
                        <div class="inline-block px-2 py-1 bg-amber-100 text-amber-700 text-xs font-semibold rounded mb-2">Book</div>
                        <h3 class="font-bold text-lg text-gray-900 mb-2 line-clamp-2">{book.title}</h3>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2">{book.description}</p>
                        <div class="flex items-center justify-between">
                            <span class="text-2xl font-bold text-gray-900">${book.price}</span>
                            <div class="flex items-center gap-1">
                                <span class="text-yellow-500">★</span>
                                <span class="text-sm font-semibold text-gray-700">{book.rating}</span>
                                <span class="text-xs text-gray-500">({book.reviews})</span>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <!-- Featured Courses -->
    <section class="mb-16 max-w-5xl">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Featured Micro-Credentials</h2>
            <a href="/courses" class="text-blue-600 hover:text-blue-800 font-semibold no-underline">View All Courses →</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {featuredCourses.map(course => (
                <div class="card card-hover bg-white border border-gray-200 rounded-xl overflow-hidden shadow-sm">
                    <div class="aspect-[4/3] bg-gradient-to-br from-blue-100 to-indigo-200 overflow-hidden flex items-center justify-center">
                        <span class="text-6xl">{course.image}</span>
                    </div>
                    <div class="p-5">
                        <div class="inline-block px-2 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded mb-2">Micro-Credential</div>
                        <h3 class="font-bold text-lg text-gray-900 mb-2 line-clamp-2">{course.title}</h3>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2">{course.description}</p>
                        <div class="flex items-center justify-between">
                            <span class="text-2xl font-bold text-gray-900">${course.price}</span>
                            <div class="flex items-center gap-1">
                                <span class="text-yellow-500">★</span>
                                <span class="text-sm font-semibold text-gray-700">{course.rating}</span>
                                <span class="text-xs text-gray-500">({course.reviews})</span>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="mb-16 max-w-5xl">
        <div class="text-center mb-10">
            <h2 class="text-3xl font-bold text-gray-900 mb-3">What Educators Are Saying</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Join thousands of educators who have transformed their classrooms with our resources</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {testimonials.map(testimonial => (
                <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex gap-1 mb-4">
                        {[...Array(5)].map(() => (
                            <span class="text-yellow-500">★</span>
                        ))}
                    </div>
                    <blockquote class="text-gray-700 mb-6 italic">"{testimonial.quote}"</blockquote>
                    <div class="border-t border-gray-100 pt-4">
                        <p class="font-semibold text-gray-900">{testimonial.author}</p>
                        <p class="text-sm text-gray-600">{testimonial.role}</p>
                        <p class="text-sm text-blue-600">{testimonial.school}</p>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-12 sm:py-16 bg-gradient-to-r from-blue-600 via-blue-700 to-indigo-800 rounded-2xl mb-16 max-w-5xl text-center text-white shadow-xl">
        <div class="px-6">
            <h2 class="text-3xl sm:text-4xl font-bold mb-4">Ready to Transform Your Learning Journey?</h2>
            <p class="text-lg mb-8 opacity-90 max-w-2xl mx-auto">Explore our complete catalog of professional development resources designed by educators, for educators</p>
            <div class="flex flex-wrap gap-4 justify-center">
                <a href="/shop" class="btn btn-lg bg-white text-blue-700 hover:bg-gray-100 rounded-lg px-8 no-underline font-semibold">Explore All Products</a>
                <a href="/about" class="btn btn-lg btn-outline border-white text-white hover:bg-white/20 rounded-lg px-8 no-underline">Learn More About Us</a>
            </div>
            <div class="mt-8 flex flex-wrap justify-center gap-6 text-sm opacity-80">
                <span class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    Free shipping on orders over $50
                </span>
                <span class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    30-day money-back guarantee
                </span>
                <span class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    Instant course access
                </span>
            </div>
        </div>
    </section>
</Layout>
