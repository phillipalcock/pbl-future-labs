---
import Layout from '../layouts/Layout.astro';
import { products } from '../data/products';

const courses = products.filter(p => p.category === 'course');
const books = products.filter(p => p.category === 'book');
---

<Layout title="Programs - PBL Future Labs">
    <!-- Page Header -->
    <section class="scroll-reveal" style="padding: 4rem 0 3rem;">
        <h1 class="mb-6">Programs.</h1>
        <p style="color: #6B6560; font-size: 1.1rem; max-width: 520px;">Online courses and books for educators implementing AI in project-based learning.</p>
    </section>

    <div class="section-divider"></div>

    <!-- Courses -->
    <section class="scroll-reveal" style="padding: 2rem 0 3rem;">
        <h2 class="mb-12">Courses.</h2>
        <div class="space-y-16">
            {courses.map(course => (
                <div>
                    <h3 class="mb-2">{course.title}</h3>
                    <p class="mb-3" style="color: #6B6560;">{course.description}</p>
                    <p style="color: #6B6560; font-size: 0.875rem;">
                        {course.duration} · Self-paced · ${course.price}
                    </p>
                    <a href={`mailto:hello@pblfuturelabs.com?subject=Interest in ${course.title}`} class="text-link-arrow inline-block mt-3">View course &rarr;</a>
                </div>
            ))}
        </div>
    </section>

    <div class="section-divider"></div>

    <!-- Books -->
    <section class="scroll-reveal" style="padding: 2rem 0 3rem;">
        <h2 class="mb-12">Books.</h2>
        <div class="space-y-16">
            {books.map(book => (
                <div class="flex flex-col sm:flex-row gap-6">
                    <div class="w-full sm:w-40 flex-shrink-0">
                        <div class="aspect-[3/4] overflow-hidden img-skeleton" style="border-radius: 4px;">
                            <img
                                src={book.image}
                                alt={book.title}
                                width="160"
                                height="213"
                                class="w-full h-full object-cover"
                                loading="lazy"
                                decoding="async"
                                onload="this.parentElement.classList.add('loaded')"
                            />
                        </div>
                    </div>
                    <div>
                        <h3 class="mb-2">{book.title}</h3>
                        <p class="mb-3" style="color: #6B6560;">{book.description}</p>
                        <p style="color: #6B6560; font-size: 0.875rem;">${book.price}</p>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <div class="section-divider"></div>

    <!-- FAQ -->
    <section class="scroll-reveal" style="padding: 2rem 0 3rem;">
        <h2 class="mb-12">Questions.</h2>
        <div class="space-y-10">
            <div>
                <h3 class="mb-2">Do I need prerequisites?</h3>
                <p style="color: #6B6560;">General teaching experience. No prior AI expertise needed.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">How long do I have access?</h3>
                <p style="color: #6B6560;">Lifetime access. Complete at your own pace.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">What's the refund policy?</h3>
                <p style="color: #6B6560;">30-day, no-questions-asked money-back guarantee.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">Team pricing?</h3>
                <p style="color: #6B6560;">Email us at <a href="mailto:hello@pblfuturelabs.com" class="text-link-arrow">hello@pblfuturelabs.com</a> for district pricing.</p>
            </div>
        </div>
    </section>
</Layout>
