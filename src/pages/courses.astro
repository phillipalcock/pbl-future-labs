---
import Layout from '../layouts/Layout.astro';
import { products } from '../data/products';

const courses = products.filter(p => p.category === 'course');
---

<Layout title="Project-Based AI Experiences — Learn the Method | PBL Future Labs">
    <!-- Page Header -->
    <section class="scroll-reveal" style="padding: 4rem 0 3rem;">
        <h1 class="mb-4">Master AI-Powered PBL.</h1>
        <p style="color: #6B6560; font-size: 1.1rem; max-width: 520px;">Project-Based AI Experiences — designed by Thom Markham, Ph.D. and Phil Alcock. Learn the method. Transform your classroom.</p>
    </section>

    <div class="section-divider"></div>

    <!-- Trust Indicators -->
    <section class="scroll-reveal" style="padding: 1rem 0 2rem;">
        <div class="flex flex-wrap justify-center gap-6 text-center" style="font-size: 0.85rem; color: #6B6560;">
            <div class="flex items-center gap-2">
                <svg class="w-4 h-4" style="color: #0D9488;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>PBL Future Labs Certification</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-4 h-4" style="color: #0D9488;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>Self-paced, lifetime access</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-4 h-4" style="color: #0D9488;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/></svg>
                <span>30-day money-back guarantee</span>
            </div>
        </div>
    </section>

    <div class="section-divider"></div>

    <!-- Course Cards -->
    <section class="scroll-reveal" style="padding: 2rem 0 3rem;">
        <div class="space-y-8">
            {courses.map(course => (
                <div class="course-card">
                    <!-- Course Thumbnail -->
                    <div class="course-card-thumbnail">
                        <div class="course-thumbnail-graphic" data-course={course.thumbnail}>
                            <span style="font-size: 2rem;">{course.id === 'course-1' ? '\u{1F916}' : course.id === 'course-2' ? '\u{1F3AF}' : course.id === 'course-3' ? '\u2728' : course.id === 'course-4' ? '\u{1F91D}' : course.id === 'course-5' ? '\u{1F4CA}' : '\u2696\uFE0F'}</span>
                        </div>
                    </div>
                    <!-- Course Info -->
                    <div class="course-card-content">
                        <div class="flex flex-wrap items-center gap-2 mb-2">
                            <span class="course-badge">{course.duration}</span>
                            <span class="course-badge">Self-paced</span>
                            <span class="course-badge credential-badge">Earn a Certification</span>
                        </div>
                        <h3 class="mb-2" style="font-size: 1.15rem;">{course.title}</h3>
                        <p style="color: #6B6560; font-size: 0.9rem; margin-bottom: 0.5rem;">By {course.instructor}</p>
                        <p style="color: #6B6560; font-size: 0.9rem; margin-bottom: 1rem;">{course.description}</p>

                        <!-- What's Included -->
                        {course.includes && (
                            <div class="mb-3">
                                <div class="flex flex-wrap gap-x-4 gap-y-1" style="font-size: 0.8rem; color: #6B6560;">
                                    {course.includes.map(item => (
                                        <span class="flex items-center gap-1">
                                            <svg class="w-3 h-3" style="color: #0D9488;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                                            {item}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )}

                        <!-- Curriculum Preview -->
                        {course.curriculum && (
                            <details class="mb-4" style="font-size: 0.85rem;">
                                <summary style="color: #0D9488; cursor: pointer; font-weight: 500;">View curriculum</summary>
                                <ul class="mt-2 space-y-1" style="color: #6B6560; padding-left: 1rem;">
                                    {course.curriculum.map(week => (
                                        <li style="list-style: disc;">{week}</li>
                                    ))}
                                </ul>
                            </details>
                        )}

                        <!-- Price & CTA -->
                        <div class="flex items-center gap-4">
                            <span style="font-weight: 500; font-size: 1.2rem; color: #1A1A1A;">${course.price}</span>
                            <a href={`mailto:hello@pblfuturelabs.com?subject=Enroll: ${course.title}`} class="btn-primary-teal" style="padding: 8px 24px; font-size: 14px;">Enroll Now</a>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>

    <div class="section-divider"></div>

    <!-- Instructors -->
    <section class="scroll-reveal" style="padding: 2rem 0 3rem;">
        <h2 class="mb-10">Your instructors.</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
            <div class="flex gap-4 items-start">
                <div class="w-20 h-20 flex-shrink-0 overflow-hidden img-skeleton" style="border-radius: 50%;">
                    <img
                        src="/images/thom.webp"
                        alt="Thom Markham, Ph.D."
                        width="80"
                        height="80"
                        class="w-full h-full object-cover"
                        loading="lazy"
                        decoding="async"
                        onload="this.parentElement.classList.add('loaded')"
                    />
                </div>
                <div>
                    <h3 style="font-size: 1rem; margin-bottom: 0.25rem;">Thom Markham, Ph.D.</h3>
                    <p style="color: #0D9488; font-size: 0.8rem; margin-bottom: 0.5rem;">Author & PBL Expert</p>
                    <p style="color: #6B6560; font-size: 0.85rem;">Author of three bestselling PBL books. 15+ years training educators worldwide. Instructional designer for all courses.</p>
                </div>
            </div>
            <div class="flex gap-4 items-start">
                <div class="w-20 h-20 flex-shrink-0" style="border-radius: 50%; background-color: #EDE8E3; display: flex; align-items: center; justify-content: center;">
                    <span style="font-size: 1.5rem; color: #6B6560;">PA</span>
                </div>
                <div>
                    <h3 style="font-size: 1rem; margin-bottom: 0.25rem;">Phil Alcock</h3>
                    <p style="color: #0D9488; font-size: 0.8rem; margin-bottom: 0.5rem;">Co-Founder, PBL Future Labs</p>
                    <p style="color: #6B6560; font-size: 0.85rem;">ISTE speaker, Harvard guest lecturer, 10,000+ educator following. Designs the AI workflows and project systems used in every course.</p>
                </div>
            </div>
        </div>
    </section>

    <div class="section-divider"></div>

    <!-- FAQ -->
    <section class="scroll-reveal" style="padding: 2rem 0 3rem;">
        <h2 class="mb-12">Questions.</h2>
        <div class="space-y-10">
            <div>
                <h3 class="mb-2">Do I need any prior AI experience?</h3>
                <p style="color: #6B6560;">Not at all. If you can teach, you can do this. We start from scratch and build up. By the end, you'll be designing AI-powered projects with confidence.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">How long do I have access?</h3>
                <p style="color: #6B6560;">Forever. Once you're in, you're in. Go at your own pace, revisit anything, and get every future update we add.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">What certification do I earn?</h3>
                <p style="color: #6B6560;">Each course includes a PBL Future Labs Certification upon completion. These document your professional development hours and signal to your school that you've been trained in AI-powered project-based learning by Thom Markham and Phil Alcock.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">How many PD hours do I earn?</h3>
                <p style="color: #6B6560;">Each course provides documented PD hours matching its duration (e.g., a 4-week course provides approximately 12-16 PD hours). Exact hours are listed on each course page.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">What do I need to get started?</h3>
                <p style="color: #6B6560;">A browser and an internet connection. Everything runs in our learning platform — desktop, tablet, or phone. No special software.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">What if it's not for me?</h3>
                <p style="color: #6B6560;">30-day, no-questions-asked money-back guarantee on every course. No risk.</p>
            </div>
            <div class="divider-line"></div>
            <div>
                <h3 class="mb-2">Team or school pricing?</h3>
                <p style="color: #6B6560;">We do custom pricing for schools and districts. Reach out at <a href="mailto:hello@pblfuturelabs.com" class="text-link-arrow">hello@pblfuturelabs.com</a> and we'll put together a plan.</p>
            </div>
        </div>
    </section>

    <div class="section-divider"></div>

    <!-- Email Capture -->
    <section class="scroll-reveal text-center" style="padding: 2rem 0 4rem;">
        <h2 class="mb-4">Not ready to enroll?</h2>
        <p class="mb-6" style="color: #6B6560; max-width: 400px; margin: 0 auto;">Get the free PBL + AI starter guide and see what Project-Based AI Experiences look like in practice.</p>
        <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
            <input type="email" placeholder="Your email" class="input-pill flex-1" required />
            <button type="submit" class="btn-primary-teal">Get the guide</button>
        </form>
    </section>
</Layout>
