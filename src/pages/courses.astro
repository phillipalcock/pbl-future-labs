---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { products } from '../data/products';

const courses = products.filter(p => p.category === 'course');

const breadcrumbItems = [
    { label: 'Courses' }
];
---

<Layout title="Micro-Credentials - Professional Development Courses">
    <div class="max-w-6xl">
        <Breadcrumb items={breadcrumbItems} />

        <!-- Page Header -->
        <div class="mb-12">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">Micro-Credential Courses</h1>
            <p class="text-lg text-gray-600 dark:text-gray-400">Earn recognized credentials through specialized, focused learning programs designed for busy professionals</p>
        </div>

        <!-- Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-12">
            <div class="bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 rounded-xl p-6 text-center">
                <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">4-7 Weeks</div>
                <p class="text-gray-600 dark:text-gray-400">Flexible pacing fits your schedule</p>
            </div>
            <div class="bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 rounded-xl p-6 text-center">
                <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2">100% Online</div>
                <p class="text-gray-600 dark:text-gray-400">Learn anywhere, anytime</p>
            </div>
            <div class="bg-amber-50 dark:bg-amber-900/30 border border-amber-200 dark:border-amber-800 rounded-xl p-6 text-center">
                <div class="text-3xl font-bold text-amber-600 dark:text-amber-400 mb-2">Recognized</div>
                <p class="text-gray-600 dark:text-gray-400">Industry-recognized credentials</p>
            </div>
        </div>

        <!-- Courses Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
            {courses.map(course => (
                <div class="card card-hover bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden shadow-sm">
                    <!-- Icon -->
                    <div class="aspect-[4/3] bg-gradient-to-br from-blue-100 to-indigo-200 dark:from-blue-900/50 dark:to-indigo-900/50 overflow-hidden flex items-center justify-center">
                        <span class="text-7xl">{course.image}</span>
                    </div>

                    <div class="p-6">
                        <!-- Badge -->
                        <div class="inline-block px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 text-xs font-bold rounded-full mb-3">Micro-Credential</div>

                        <!-- Title -->
                        <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100 mb-3 line-clamp-2">{course.title}</h3>

                        <!-- Description -->
                        <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3">{course.description}</p>

                        <!-- Features -->
                        <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-2 mb-4">
                            <li class="flex gap-2">
                                <span class="text-green-600 dark:text-green-400">✓</span>
                                <span>Self-paced learning</span>
                            </li>
                            <li class="flex gap-2">
                                <span class="text-green-600 dark:text-green-400">✓</span>
                                <span>Hands-on projects</span>
                            </li>
                            <li class="flex gap-2">
                                <span class="text-green-600 dark:text-green-400">✓</span>
                                <span>Certificate of completion</span>
                            </li>
                        </ul>

                        <!-- Rating -->
                        <div class="flex items-center gap-2 mb-4 pb-4 border-b border-gray-100 dark:border-gray-700">
                            <div class="flex items-center">
                                <span class="text-yellow-500">★</span>
                                <span class="text-sm font-semibold text-gray-700 dark:text-gray-300 ml-1">{course.rating}</span>
                            </div>
                            <span class="text-xs text-gray-500 dark:text-gray-400">({course.reviews} reviews)</span>
                        </div>

                        <!-- Price -->
                        <div>
                            <span class="text-2xl font-bold text-gray-900 dark:text-gray-100">${course.price}</span>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- What You'll Learn Section -->
        <section class="bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/30 rounded-2xl p-8 mb-12 border border-gray-100 dark:border-gray-700">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">What You'll Learn</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100 mb-3">Comprehensive Curriculum</h3>
                    <p class="text-gray-600 dark:text-gray-400">Each micro-credential course is carefully designed to provide practical, immediately applicable skills in your field of professional development.</p>
                </div>
                <div>
                    <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100 mb-3">Expert Instruction</h3>
                    <p class="text-gray-600 dark:text-gray-400">Learn from experienced educators and industry professionals who bring real-world expertise and practical insights to every course.</p>
                </div>
                <div>
                    <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100 mb-3">Interactive Projects</h3>
                    <p class="text-gray-600 dark:text-gray-400">Apply your learning through hands-on projects that mirror real-world scenarios, ensuring you can use your new skills immediately.</p>
                </div>
                <div>
                    <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100 mb-3">Ongoing Support</h3>
                    <p class="text-gray-600 dark:text-gray-400">Access to course materials, discussion forums, and resources available throughout your learning journey and beyond.</p>
                </div>
            </div>
        </section>

        <!-- FAQ Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Frequently Asked Questions</h2>
            <div class="space-y-4">
                <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 shadow-sm">
                    <h3 class="font-bold text-gray-900 dark:text-gray-100 mb-2">Do I need prerequisites?</h3>
                    <p class="text-gray-600 dark:text-gray-400">Most micro-credentials are designed for professionals with general knowledge in education. Specific prerequisites are listed in each course description.</p>
                </div>
                <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 shadow-sm">
                    <h3 class="font-bold text-gray-900 dark:text-gray-100 mb-2">How long do I have access?</h3>
                    <p class="text-gray-600 dark:text-gray-400">You'll have lifetime access to all course materials and can complete at your own pace, though most courses take 4-7 weeks.</p>
                </div>
                <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 shadow-sm">
                    <h3 class="font-bold text-gray-900 dark:text-gray-100 mb-2">Are credentials recognized?</h3>
                    <p class="text-gray-600 dark:text-gray-400">Yes, our micro-credentials are recognized by leading educational institutions and employers in the field.</p>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-12 bg-gradient-to-r from-blue-600 via-blue-700 to-indigo-800 dark:from-blue-700 dark:via-blue-800 dark:to-indigo-900 rounded-2xl text-center text-white mb-8 shadow-xl">
            <h2 class="text-3xl font-bold mb-4">Ready to Advance Your Career?</h2>
            <p class="text-lg mb-6 opacity-90">Start your first micro-credential today and join thousands of educators advancing their skills</p>
            <div class="flex gap-4 justify-center flex-wrap">
                <button class="btn btn-lg bg-white text-blue-700 hover:bg-gray-100 rounded-lg font-semibold">Start Free Trial</button>
                <a href="/shop" class="btn btn-lg btn-outline border-white text-white hover:bg-white/20 rounded-lg no-underline">View All Resources</a>
            </div>
            <div class="mt-6">
                <span class="guarantee-badge bg-white/10 border-white/20 text-white">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                    30-Day Money-Back Guarantee
                </span>
            </div>
        </section>
    </div>
</Layout>
