---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { products } from '../data/products';

const courses = products.filter(p => p.category === 'course');

const breadcrumbItems = [
    { label: 'Courses' }
];
---

<Layout title="Micro-Credentials - Professional Development Courses">
    <div class="max-w-6xl">
        <Breadcrumb items={breadcrumbItems} />

        <!-- Page Header -->
        <div class="mb-16">
            <h1 class="text-5xl sm:text-6xl font-bold text-gray-900 mb-6">Courses</h1>
            <p class="text-xl text-gray-600 max-w-3xl">Online courses for teachers implementing AI in project-based learning. Each includes real projects you do with your students.</p>
        </div>

        <!-- Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16 pb-16 border-b border-gray-200">
            <div class="text-center">
                <div class="text-3xl font-bold text-gray-900 mb-2">4-7 weeks</div>
                <p class="text-gray-600">Clear time commitment</p>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-gray-900 mb-2">Self-paced</div>
                <p class="text-gray-600">Learn on your schedule, lifetime access</p>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-gray-900 mb-2">30-day guarantee</div>
                <p class="text-gray-600">Full refund, no questions</p>
            </div>
        </div>

        <!-- Courses Grid -->
        <div class="space-y-8 mb-16">
            {courses.map(course => (
                <div class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100">
                    <div class="grid grid-cols-1 md:grid-cols-3">
                        <!-- Icon + Badge -->
                        <div class="aspect-[4/3] md:aspect-auto bg-gray-50 border-r border-gray-200 flex items-center justify-center p-8">
                            <span class="text-8xl">{course.image}</span>
                        </div>

                        <!-- Content -->
                        <div class="md:col-span-2 p-6 sm:p-8">
                            <div class="flex flex-wrap items-center gap-2 mb-3">
                                <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-bold rounded-full">Micro-Credential</span>
                                {course.duration && <span class="px-3 py-1 bg-gray-100 text-gray-700 text-xs font-bold rounded-full">{course.duration}</span>}
                                <div class="flex items-center gap-1 ml-auto">
                                    <span class="text-yellow-500">&#9733;</span>
                                    <span class="text-sm font-semibold text-gray-700">{course.rating}</span>
                                </div>
                            </div>

                            <h3 class="font-bold text-xl text-gray-900 mb-3">{course.title}</h3>
                            <p class="text-gray-600 mb-4">{course.description}</p>

                            {course.curriculum && course.curriculum.length > 0 && (
                                <div class="mb-4">
                                    <h4 class="font-semibold text-gray-900 text-sm mb-2">What You'll Cover:</h4>
                                    <ul class="text-sm text-gray-600 space-y-1">
                                        {course.curriculum.map(item => (
                                            <li class="flex gap-2">
                                                <span class="text-blue-600 flex-shrink-0">&#8226;</span>
                                                <span>{item}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            )}

                            <div class="flex items-center gap-4 pt-4 border-t border-gray-100">
                                <span class="text-2xl font-bold text-gray-900">${course.price}</span>
                                <div class="flex gap-2 text-xs text-gray-500">
                                    <span>&#10003; Self-paced</span>
                                    <span>&#10003; Hands-on projects</span>
                                    <span>&#10003; Certificate</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- FAQ Section -->
        <section class="py-16 border-b border-gray-200">
            <h2 class="text-4xl font-bold text-gray-900 mb-12">Questions?</h2>
            <div class="space-y-8 max-w-3xl">
                <div class="pb-8 border-b border-gray-200 last:border-b-0">
                    <h3 class="font-bold text-gray-900 mb-2">Do I need prerequisites?</h3>
                    <p class="text-gray-600">Most courses assume general teaching experience but no prior AI expertise. If you can use email and a web browser, you have what you need.</p>
                </div>
                <div class="pb-8 border-b border-gray-200 last:border-b-0">
                    <h3 class="font-bold text-gray-900 mb-2">How long do I have access?</h3>
                    <p class="text-gray-600">Lifetime access to all materials. Complete at your own paceâ€”the weekly structure is a guide, not a deadline.</p>
                </div>
                <div class="pb-8 border-b border-gray-200 last:border-b-0">
                    <h3 class="font-bold text-gray-900 mb-2">What's the refund policy?</h3>
                    <p class="text-gray-600">30-day, no-questions-asked guarantee. Email hello@pblfuturelabs.com for a full refund. No forms.</p>
                </div>
                <div class="pb-8 border-b border-gray-200 last:border-b-0">
                    <h3 class="font-bold text-gray-900 mb-2">Team or district pricing?</h3>
                    <p class="text-gray-600">Yes. Email hello@pblfuturelabs.com for group pricing options.</p>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Not sure which course?</h2>
            <p class="text-lg text-gray-600 mb-8 max-w-2xl">Start with the free guide, or email and we'll help you pick the right one.</p>
            <div class="flex gap-3 flex-wrap">
                <a href="/#free-guide" class="btn btn-primary text-white rounded-lg px-6 py-3 no-underline font-medium min-h-[48px] active:scale-95">Free guide</a>
                <a href="mailto:hello@pblfuturelabs.com?subject=Course Question" class="btn btn-outline rounded-lg px-6 py-3 no-underline border border-gray-300 font-medium min-h-[48px] active:scale-95 hover:border-gray-400">Email</a>
            </div>
        </section>
    </div>
</Layout>
