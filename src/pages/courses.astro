---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { products } from '../data/products';

const courses = products.filter(p => p.category === 'course');

const breadcrumbItems = [
    { label: 'Courses' }
];
---

<Layout title="Micro-Credentials - Professional Development Courses">
    <div class="max-w-6xl">
        <Breadcrumb items={breadcrumbItems} />

        <!-- Page Header -->
        <div class="mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Courses</h1>
            <p class="text-lg text-gray-600">Online courses for teachers implementing AI in project-based learning. Each one includes real projects you do with your students, not just theory.</p>
        </div>

        <!-- Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-12">
            <div class="bg-blue-50 rounded-2xl p-6 text-center">
                <div class="text-3xl font-bold text-blue-600 mb-2">4-7 weeks</div>
                <p class="text-gray-600">Clear time commitment</p>
            </div>
            <div class="bg-green-50 rounded-2xl p-6 text-center">
                <div class="text-3xl font-bold text-green-600 mb-2">Self-paced</div>
                <p class="text-gray-600">Learn on your schedule, lifetime access</p>
            </div>
            <div class="bg-amber-50 rounded-2xl p-6 text-center">
                <div class="text-3xl font-bold text-amber-600 mb-2">30-day guarantee</div>
                <p class="text-gray-600">Full refund, no questions</p>
            </div>
        </div>

        <!-- Courses Grid -->
        <div class="space-y-8 mb-16">
            {courses.map(course => (
                <div class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100">
                    <div class="grid grid-cols-1 md:grid-cols-3">
                        <!-- Icon + Badge -->
                        <div class="aspect-[4/3] md:aspect-auto bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-8">
                            <span class="text-8xl">{course.image}</span>
                        </div>

                        <!-- Content -->
                        <div class="md:col-span-2 p-6 sm:p-8">
                            <div class="flex flex-wrap items-center gap-2 mb-3">
                                <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-bold rounded-full">Micro-Credential</span>
                                {course.duration && <span class="px-3 py-1 bg-gray-100 text-gray-700 text-xs font-bold rounded-full">{course.duration}</span>}
                                <div class="flex items-center gap-1 ml-auto">
                                    <span class="text-yellow-500">&#9733;</span>
                                    <span class="text-sm font-semibold text-gray-700">{course.rating}</span>
                                </div>
                            </div>

                            <h3 class="font-bold text-xl text-gray-900 mb-3">{course.title}</h3>
                            <p class="text-gray-600 mb-4">{course.description}</p>

                            {course.curriculum && course.curriculum.length > 0 && (
                                <div class="mb-4">
                                    <h4 class="font-semibold text-gray-900 text-sm mb-2">What You'll Cover:</h4>
                                    <ul class="text-sm text-gray-600 space-y-1">
                                        {course.curriculum.map(item => (
                                            <li class="flex gap-2">
                                                <span class="text-blue-600 flex-shrink-0">&#8226;</span>
                                                <span>{item}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            )}

                            <div class="flex items-center gap-4 pt-4 border-t border-gray-100">
                                <span class="text-2xl font-bold text-gray-900">${course.price}</span>
                                <div class="flex gap-2 text-xs text-gray-500">
                                    <span>&#10003; Self-paced</span>
                                    <span>&#10003; Hands-on projects</span>
                                    <span>&#10003; Certificate</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- FAQ Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Frequently Asked Questions</h2>
            <div class="space-y-4">
                <div class="bg-white rounded-2xl p-6 shadow-sm">
                    <h3 class="font-bold text-gray-900 mb-2">Do I need prerequisites?</h3>
                    <p class="text-gray-600">Most courses assume general teaching experience but no prior AI expertise. If you can use email and a web browser, you have the technical skills you need.</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-sm">
                    <h3 class="font-bold text-gray-900 mb-2">How long do I have access?</h3>
                    <p class="text-gray-600">Lifetime access to all course materials. Complete at your own pace â€” the weekly structure is a guide, not a deadline.</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-sm">
                    <h3 class="font-bold text-gray-900 mb-2">What's the refund policy?</h3>
                    <p class="text-gray-600">30-day, no-questions-asked money-back guarantee. Email hello@pblfuturelabs.com within 30 days of purchase for a full refund. No forms, no hoops.</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-sm">
                    <h3 class="font-bold text-gray-900 mb-2">Can my school purchase for multiple teachers?</h3>
                    <p class="text-gray-600">Yes. Email us at hello@pblfuturelabs.com for team and district pricing.</p>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-12 bg-gradient-to-r from-blue-600 via-blue-700 to-indigo-800 rounded-2xl text-center text-white mb-8 shadow-xl">
            <h2 class="text-3xl font-bold mb-4">Not sure which course?</h2>
            <p class="text-lg mb-6 opacity-90">Start with the free guide, or email and we'll help you choose.</p>
            <div class="flex gap-4 justify-center flex-wrap">
                <a href="/#free-guide" class="btn btn-lg bg-white text-blue-700 hover:bg-gray-100 rounded-xl font-semibold no-underline min-h-[48px] active:scale-95 transition-transform">Free Guide</a>
                <a href="mailto:hello@pblfuturelabs.com?subject=Course Question" class="btn btn-lg btn-outline border-white text-white hover:bg-white/20 rounded-xl no-underline min-h-[48px] active:scale-95 transition-transform">Email</a>
            </div>
        </section>
    </div>
</Layout>
