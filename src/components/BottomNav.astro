---
const navItems = [
    { label: 'Home', href: '/', icon: 'home' },
    { label: 'Shop', href: '/shop', icon: 'shop' },
    { label: 'Courses', href: '/courses', icon: 'courses' },
    { label: 'About', href: '/about', icon: 'about' }
];
---

<!-- Mobile Bottom Navigation - App Style -->
<nav class="fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-gray-100 sm:hidden safe-bottom">
    <div class="flex items-center justify-around h-16">
        {navItems.map((item) => (
            <a
                href={item.href}
                class="flex flex-col items-center justify-center flex-1 h-full text-gray-500 hover:text-blue-600 active:scale-90 transition-all no-underline min-w-[64px]"
            >
                {item.icon === 'home' && (
                    <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                )}
                {item.icon === 'shop' && (
                    <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                )}
                {item.icon === 'courses' && (
                    <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                    </svg>
                )}
                {item.icon === 'about' && (
                    <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                )}
                <span class="text-xs font-medium">{item.label}</span>
            </a>
        ))}
    </div>
</nav>

<script>
    // Highlight current page in bottom nav
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('nav.fixed a');

    navLinks.forEach(link => {
        const href = link.getAttribute('href');
        if (href === currentPath || (currentPath === '/' && href === '/')) {
            link.classList.remove('text-gray-500');
            link.classList.add('text-blue-600');
        }
    });
</script>
