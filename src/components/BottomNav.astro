---
const navItems = [
    { label: 'Home', href: '/', icon: 'home' },
    { label: 'Programs', href: '/programs', icon: 'programs' },
    { label: 'Services', href: '/services', icon: 'services' },
    { label: 'About', href: '/about', icon: 'about' }
];
---

<nav class="fixed bottom-0 left-0 right-0 z-50 sm:hidden safe-bottom" style="background-color: #F5F0EB; border-top: 1px solid #D4CFC9;">
    <div class="flex items-center justify-around h-16">
        {navItems.map((item) => (
            <a
                href={item.href}
                class="flex flex-col items-center justify-center flex-1 h-full min-w-[64px]"
                style="color: #6B6560; text-decoration: none; transition: color 0.2s ease;"
            >
                {item.icon === 'home' && (
                    <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                )}
                {item.icon === 'programs' && (
                    <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                )}
                {item.icon === 'services' && (
                    <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                )}
                {item.icon === 'about' && (
                    <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                )}
                <span style="font-family: 'Newsreader', Georgia, serif; font-size: 11px; font-weight: 400;">{item.label}</span>
            </a>
        ))}
    </div>
</nav>

<script>
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('nav.fixed a');

    navLinks.forEach(link => {
        const href = link.getAttribute('href');
        if (href === currentPath || (currentPath === '/' && href === '/')) {
            link.style.color = '#0D9488';
        }
    });
</script>
