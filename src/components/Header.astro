---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Shop', href: '/shop' },
    { linkText: 'Courses', href: '/courses' },
    { linkText: 'Gumroad Store', href: '/gumroad' },
    { linkText: 'About', href: '/about' }
];
---

<nav class="py-6 sm:py-8 border-b border-gray-200">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
        <!-- Logo and Title -->
        <a href="/" class="flex-shrink-0">
            <div class="flex items-center gap-2">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-400 to-purple-600 flex items-center justify-center font-bold text-white text-lg">
                    PB
                </div>
                <span class="font-bold text-xl text-gray-900">PBL Future Labs</span>
            </div>
        </a>

        <!-- Navigation Menu -->
        {
            !!navItems?.length && (
                <ul class="flex flex-wrap gap-1 sm:gap-2">
                    {navItems.map((item) => (
                        <li>
                            <a
                                href={item.href}
                                class="inline-block px-3 py-2 text-sm sm:text-base text-gray-700 hover:text-blue-600 hover:bg-blue-50 font-medium transition rounded"
                            >
                                {item.linkText}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>
</nav>
