---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Shop', href: '/shop' },
    { linkText: 'Courses', href: '/courses' },
    { linkText: 'About', href: '/about' }
];
---

<nav class="sticky top-0 z-50 py-4 sm:py-5 border-b border-gray-200 bg-white/95 backdrop-blur-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <!-- Logo and Title -->
        <a href="/" class="flex items-center gap-3 flex-shrink-0 no-underline">
            <div class="flex items-center gap-2">
                <svg class="w-10 h-10" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect width="40" height="40" rx="8" fill="url(#logo-gradient)"/>
                    <path d="M10 12h8c3.3 0 6 2.7 6 6s-2.7 6-6 6h-8v-12zm4 3v6h4c1.7 0 3-1.3 3-3s-1.3-3-3-3h-4z" fill="white"/>
                    <path d="M26 12h4v12h-4v-12z" fill="white"/>
                    <circle cx="28" cy="27" r="2" fill="#fbbf24"/>
                    <defs>
                        <linearGradient id="logo-gradient" x1="0" y1="0" x2="40" y2="40" gradientUnits="userSpaceOnUse">
                            <stop stop-color="#2563EB"/>
                            <stop offset="1" stop-color="#7c3aed"/>
                        </linearGradient>
                    </defs>
                </svg>
            </div>
            <div class="flex flex-col">
                <span class="font-bold text-lg text-gray-900 leading-tight">PBL Future Labs</span>
                <span class="text-xs text-gray-500">Project-Based Learning</span>
            </div>
        </a>

        <!-- Navigation Menu -->
        {
            !!navItems?.length && (
                <ul class="flex flex-wrap gap-1 sm:gap-2">
                    {navItems.map((item) => (
                        <li>
                            <a
                                href={item.href}
                                class="inline-block px-4 py-2 text-sm sm:text-base text-gray-700 hover:text-blue-600 hover:bg-blue-50 font-medium transition-all rounded-lg no-underline"
                            >
                                {item.linkText}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>
</nav>
