---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Shop', href: '/shop' },
    { linkText: 'Courses', href: '/courses' },
    { linkText: 'About', href: '/about' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-6 sm:pt-8 sm:pb-8 border-b border-gray-200">
    <a href="/" class="flex items-center gap-2">
        <Logo />
        <span class="font-bold text-lg text-gray-900">PBL Future Labs</span>
    </a>
    <div class="flex items-center gap-2 sm:gap-6">
        {
            !!navItems?.length && (
                <ul class="flex flex-wrap gap-x-2 gap-y-1 sm:gap-x-4">
                    {navItems.map((item) => (
                        <li>
                            <a href={item.href} class="inline-block px-2 py-1 sm:px-3 sm:py-2 text-gray-700 hover:text-blue-600 font-medium transition">
                                {item.linkText}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>
</nav>
